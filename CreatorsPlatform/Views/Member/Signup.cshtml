
<style>
    label{
        color:red;
    }

    :root {
        scrollbar-width: none;
    }
</style>

<section class="">
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">

                <!--左側區塊-->
                <div class="col-lg-6 mb-5 mb-lg-0">
                </div>
                <!--註冊資訊填寫區塊-->
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form id="SignupForm" method="post" action="Member/Signup">
                                <div class="form-floating mb-4">
                                    <p>電子信箱</p>
                                    <input type="email" id="Email" class="form-control" name="Email" />
                                    <label class="form-label" for="Email">電子郵件</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <p>密碼</p>
                                    <input type="password" id="Password" class="form-control" name="Password" />
                                    <label class="form-label" for="Password"></label>
                                </div>
                                <div class="form-outline mb-4">
                                    <p>確認密碼</p>
                                    <input type="password" id="RePassword" class="form-control" name="RePassword" />
                                    <label class="form-label" for="RePassword"></label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>
                                <span>已經有帳號?</span><a asp-action="Login2" class="link-opacity-100-hover link-underline-info">立即登入!</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    window.onload = () => {
        $().ready(function () {
            $("#SignupForm").validate({
                submitHandler: function (form) {
                    alert("提交事件!");
                    form.submit();
                },
                //debug: true,
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true,
                        minlength: 8
                    },
                    RePassword: {
                        required: true,
                        minlength: 8,
                        equalTo: "#Password"
                    },
                },
                messages: {
                    Email: {
                        required: "請輸入合法電子信箱",
                        email: "請輸入合法電子信箱",
                    },
                    Password: {
                        required: "請輸入密碼",
                        minlength: "密碼長度不能小於8個字母"
                    },
                    RePassword: {
                        required: "請輸入密碼",
                        minlength: "密碼長度不能小於8個字母",
                        equalTo: "兩次密碼輸入不一致"
                    },
                }
            })
        });
    }
</script>